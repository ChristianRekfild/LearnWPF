<Window x:Class="LearnWPF.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnWPF"
        xmlns:vm="clr-namespace:LearnWPF.ViewModels"
        mc:Ignorable="d"
        Height="450" Width="800"
        Title="{Binding Path=TItle}" 
        >
    <Window.DataContext>
        <vm:MainVindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход"></MenuItem>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе"></MenuItem>
            </MenuItem>
        </Menu>
        <!--#region 213-->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding Path=Status}}"
                    MinWidth="150" MaxWidth="300"/>
            </StatusBarItem>
            <StatusBarItem>
                <ProgressBar Width="120" Height="20"/>
            </StatusBarItem>
        </StatusBar>
        <!--#endregion-->
        <TabControl>
            <TabItem Header="Вкладка 1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70*"/>
                        <RowDefinition Height="400*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160*"/>
                        <ColumnDefinition Width="600*"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.Column="0" Grid.Row="0"
                           Fill="Blue" Stroke="Red" StrokeThickness="3"
                           RadiusX="5" RadiusY="5" Margin="5"/>
                    <Ellipse Grid.Column="1" Grid.Row="0"
                             Fill="Aqua" Stroke="Azure" StrokeThickness="3">
                    </Ellipse>
                    <!--Для динамического изменения размеров-->
                    <GridSplitter Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"
                                  HorizontalAlignment="Right" Width="4"/>
                </Grid>
            </TabItem>
            <TabItem Header="Вкладка 2">
            </TabItem>
        </TabControl>
        <!--<TextBox Margin="30, 30"
                 Height="30"
                 Width="300"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Text="{Binding Path=TItle, UpdateSourceTrigger=PropertyChanged}"
                 />-->
    </DockPanel>
</Window>
